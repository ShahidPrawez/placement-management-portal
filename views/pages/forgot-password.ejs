<%- include('../partials/header') %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-title">
      <h2>Forgot Password</h2>
      <div class="auth-sub">Enter your email to receive a password reset link</div>
    </div>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <form class="auth-form" method="POST" action="/auth/forgot-password">
      <div class="form-group">
        <label class="form-label">Email Address</label>
        <input class="form-control" type="email" name="email" placeholder="your@example.com" required />
      </div>

      <div style="margin-top:16px">
        <button class="btn btn-primary btn-lg" type="submit">Send Reset Link</button>
      </div>
    </form>

    <div class="auth-footer">
      Remember your password? <a href="/auth/login">Login here</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
