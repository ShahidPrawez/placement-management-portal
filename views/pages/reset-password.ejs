<%- include('../partials/header') %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-title">
      <h2>Reset Password</h2>
      <div class="auth-sub">Enter your new password below</div>
    </div>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form class="auth-form" method="POST" action="/auth/reset-password/<%= token %>">
      <div class="form-group">
        <label class="form-label">New Password</label>
        <input class="form-control" type="password" name="password" placeholder="Enter new password" required />
      </div>

      <div class="form-group">
        <label class="form-label">Confirm Password</label>
        <input class="form-control" type="password" name="confirmPassword" placeholder="Confirm new password" required />
      </div>

      <div style="margin-top:16px">
        <button class="btn btn-primary btn-lg" type="submit">Reset Password</button>
      </div>
    </form>

    <div class="auth-footer">
      <a href="/auth/login">Back to login</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
